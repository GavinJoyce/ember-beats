<div class="playback">
  <div class="btn-toolbar">

      {{#unless isActive}}
      <button type="button" class="btn btn-large" {{action start}}>
        <i class="icon-play"></i>
      </button>
      {{else}}
      <button type="button" class="btn btn-large btn-danger" {{action stop}}>
        <i class="icon-stop"></i>
      </button>
      {{/unless}}

    <div class="btn-group"></div>

    <div class="btn-group">
      <button type="button" class="btn btn-large" {{action decreaseTempo}}>
        <i class="icon-minus-sign"></i>
      </button>
      <button type="button" class="btn btn-large"><strong>{{tempo}} bpm</strong></button>
      <button type="button" class="btn btn-large" {{action increaseTempo}}>
        <i class="icon-plus-sign"></i>
      </button>
    </div>

    <div class="btn-group">
      <button type="button" class="btn btn-large"><strong>{{display}}</strong></button>
    </div>

    <div class="btn-group">
      <a class="btn btn-large dropdown-toggle " data-toggle="dropdown" href="#">
        Presets
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
          <li>
            <a {{action switchToPreset 'default'}}>Default</a>
            <a {{action switchToPreset 'sundaybloodysunday'}}>Sunday Bloody Sunday - U2</a>
            <a {{action switchToPreset 'sexualhealing'}}>Sexual Healing - Marvin Gaye</a>
            <a {{action switchToPreset '15step'}}>15 Step - Radiohead</a>
            <a {{action switchToPreset 'juicy'}}>Juicy - B.I.G.</a>
          </li>
      </ul>
    </div>

    <div class="btn-group" style="float: right;">
      <button type="button" class="btn" {{action toggleShare}}>
        <strong>Share Song</strong>
        <i class="icon-share"></i>
      </button>
    </div>
  </div>
</div>

{{#if shareVisible}}
  {{partial "partials/share"}}
{{/if}}
